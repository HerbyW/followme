    <flight_control name="Truck">
      
        <channel name="Engine">
          <fcs_function name="fcs/engine-force">
            <function>
              <product>
                <property>/controls/engines/engine/throttle</property>
                <property>/controls/engines/engine/direction</property>
                <value>2200</value>
		<table>
                          <independentVar>/velocities/groundspeed-kt</independentVar>
                          <tableData>
                              0.0	3.0
                              10.0	2.5
                              50.0	2.2
                              80.0	1.3
                              100.0	1.0
			      140.0     0.9
			      160.0     0.5
			      180.0     0.1 
                          </tableData>
                      </table>
              </product>
            </function>
            <output>external_reactions/engine/magnitude</output>
          </fcs_function>
        </channel>

        <channel name="Steer">
            <summer name="Steer Sum">
                <input>fcs/rudder-cmd-norm</input>
                <clipto>
                    <min>-1</min>
                    <max>1</max>
                </clipto>
                <output>fcs/rudder-pos-norm</output>
            </summer>
        </channel>
    </flight_control>

